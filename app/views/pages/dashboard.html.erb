<div class="row">
  <div class="col-md-6">
    <table class="table table-bordered">
      <thead>

          <tr>
            <th><p>name</p></th>


            <th><p>Change Rol</p></th>

            <th><p>Final Rol</p></th>
            <th> <p>Options</p> </th>
          </tr>

      </thead>
      <tbody>
          <%  @users.each do |user| %>
          <tr>
            <td>
              <%= user.name %>
            </td>


            <td>
              <div class="form-group">
                <label for="sel1"><%= form_with url: user_path(user), method: "patch" do |user_form| %></label>
                <%= select_tag(:role, options_for_select([['admin', 'admin'] , ['visit', 'visit']])) %>
                <%= user_form.submit %>
                <% end %>

              </div>

            </td>
            <td>
              <%= user.role %>
            </td>
            <td>
              <%= link_to 'Eliminar', user_path(user), method: :delete, data: { confirm: 'EstÃ¡s seguro que deseas eliminar el Usuario?' }, class: 'btn btn-sm btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to 'Volver', posts_path, class: 'btn btn-default' %>
  </div>
</div>
